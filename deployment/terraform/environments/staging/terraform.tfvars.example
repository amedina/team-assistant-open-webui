# Google Cloud Configuration
project_id = "your-gcp-project-id"
region     = "us-central1"
zone       = "us-central1-a"

# Storage Configuration
storage_bucket_name = "your-project-id-openwebui-staging-storage"

# Source Code Repository
repository_url = "https://github.com/your-org/your-repo"
github_owner   = "your-org"
github_repo    = "your-repo"

# OAuth Configuration (create these in Google Cloud Console)
google_oauth_client_id     = "your-oauth-client-id.apps.googleusercontent.com"
google_oauth_client_secret = "your-oauth-client-secret"

# Notification Email (optional)
notification_email = "alerts@your-domain.com"

# Staging Database Configuration
database_tier      = "db-g1-small"
database_disk_size = 30

# Staging Redis Configuration
redis_memory_size_gb = 2
redis_tier          = "STANDARD_HA"

# Staging Cloud Run Configuration
cloud_run_cpu_limit     = "2"
cloud_run_memory_limit  = "4Gi"
cloud_run_min_instances = 1
cloud_run_max_instances = 10
uvicorn_workers        = "2"

# Feature Flags
enable_monitoring = true

# Custom Labels
labels = {
  application = "open-webui"
  environment = "staging"
  team        = "your-team"
  managed-by  = "terraform"
} 